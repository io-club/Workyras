<resources>

    <style name="WorkPoint" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">96sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="WorkTagSelector">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WorkTagSelectorDropdownItem" parent="WorkTagSelector">
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="TimestampPickerMode">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="Picker">
        <item name="android:headerBackground">?attr/colorPrimaryVariant</item>
    </style>

</resources>